.right-container {
    display: flex;
    flex-direction: column;
    position: relative;
    width: auto;
    height: auto;
}

.left-container {
    position: relative;
    width: auto;
    height: auto;
}

.content-container {
    width: auto;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 70px;
    margin: 70px 0px 70px 10%;
}

.home-page {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
    gap: 0px;
}

.title-image-container {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.title-image {
  position: relative;
  width: 100%;
  padding-top: 50%; /* 高度是宽度的50% */
  overflow: hidden;
}

.title-image img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.overlay-img {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 0; /* 确保半透明图像位于主图像之上 */
  object-fit: cover;
}

.overlay-img svg {
  width: 100%;
  /* 你可以根据需要调整透明度和其他样式 */
}

.sticky {
    position: fixed;
    top: 0;
    width: auto;
    height: auto;
}