.icon-warp {
    width: 63px;
    height: 900px;
    background: rgba(255, 255, 255, 0);
    display: flex;
    flex-direction: column;
}

.hide-slidebar-button {
    width: 63px;
    height: 63px;
    background: rgba(255, 255, 255, 0.527);
    // delete the stroke
    border: none;
}