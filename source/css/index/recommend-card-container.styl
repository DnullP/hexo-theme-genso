.recommend-card-warp {
    display: flex;
    width: 61.8%;
    height: 344px;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
    background: #697677;
}

.recommend-card {
    width: 494px;
    height: 285px;
    position: relative;
    flex-shrink: 0;
    background: #D9D9D9;
    overflow: hidden;
}

.recommend-card:hover {
    box-shadow: 8px 8px 8px 0px rgba(63, 77, 123, 0.52);
    transform: scale(1.01);
}

.recommend-card img {
    object-fit: cover;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
}

.recommend-card-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto auto;

    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 9px 0px 10px 11px;
    
    gap: 7px;
    
    z-index: 2;
    background: #ffffff4c;
    visibility: hidden;
}

.recommend-card:hover .recommend-card-content {
    visibility: visible;
}

.recommend-card-content-article-item {
    display: inline-flex;
    width: 100%;
    height: 44px;
    padding: 9px 0px 10px 11px;
    
    gap: 7px;
    flex-shrink: 0;
    z-index: 3;
}

.placard-warp {
    display: flex;
    width: 38.2%;
    height: 344px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
    background: #B07777;
}

.placard {
    width: 278px;
    height: 285px;
    flex-shrink: 0;
    background: #D9D9D9;
}