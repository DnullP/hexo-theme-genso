.card-content {
    width: 340px;
    height: 239px;
    flex-shrink: 0;
}

.card-info-warp {
    display: flex;
    width: auto;
    height: 22px;
    justify-content: center;
    align-items: flex-start;
    gap: 10px;
    flex-shrink: 0;
}

.card-info {
    width: 96px;
    height: 22px;
    flex-shrink: 0;
    color: #754C4C;
    font-family: Inter;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

.card-title {
    width: 139px;
    height: 49px;
    flex-shrink: 0;
    color: #754C4C;
    font-family: Inter;
    font-size: 32px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

.card-abstract {
    width: 332px;
    height: 142px;
    flex-shrink: 0;
    display: -webkit-box;
    color: #754C4C;
    font-family: Inter;
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    overflow: hidden;
}

.card-img {
    width: 550px;
    height: 246px;
}