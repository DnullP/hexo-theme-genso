
.card-img {
    width: 334px;
}

.card-content-box {
    width: 392px;
    height: 100%;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;

}

.card-info {
    width: auto;
    height: min-content;
    flex-shrink: 0;
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    gap: 20px;
}

.card-info-content {
    color: #5553A7;
    font-family: Londrina Solid;
    font-size: 15px;
    font-style: normal;
    font-weight: 250;
    line-height: normal;
}

.card-title {
    width: auto;
    height: min-content;
    position: relative; // 或者其他你需要的位置属性值
    text-decoration: none; // 去掉超链接下的横线
    color: hexo-config('color.card-title');
    font-family: Londrina Solid;
    font-size: 20px;
    font-style: normal;
    font-weight: 900;
    
    line-height: normal;
}

.card-abstract {
    width: 363px;
    height: auto;
    flex: 0.8;
    flex-shrink: 0;
    color: #9497A5;
    font-family: Londrina Solid;
    font-size: 15px;
    font-style: normal;
    font-weight: 250;
    line-height: normal;
    margin-top: 10px;
    overflow: hidden;
}
